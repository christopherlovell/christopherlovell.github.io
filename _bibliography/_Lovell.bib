	year = {2017},
	keywords = {Astrophysics - Astrophysics of Galaxies, methods: numerical, galaxies: high-redshift, galaxies: luminosity function, galaxies: photometry, mass function},
	pages = {2517--2530},
}

@article{wilkins_dust-obscured_2018,
