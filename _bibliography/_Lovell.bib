	author = {Narayanan, Desika and Lower, Sidney and Torrey, Paul and Brammer, Gabriel and Cui, Weiguang and Davé, Romeel and Iyer, Kartheik G. and Li, Qi and Lovell, Christopher C. and Sales, Laura V. and Stark, Daniel P. and Marinacci, Federico and Vogelsberger, Mark},
