	journal = {A\&A},
	author = {Santini, P. and Castellano, M. and Merlin, E. and Fontana, A. and Fortuni, F. and Kodra, D. and Magnelli, B. and Menci, N. and Calabrò, A. and Lovell, C. C. and Pentericci, L. and Testa, V. and Wilkins, S. M.},
	month = aug,
