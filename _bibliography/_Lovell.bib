	author = {Trussler, James A. A. and Conselice, Christopher J. and Adams, Nathan and Austin, Duncan and Caruana, Joseph and Harvey, Tom and Li, Qiong and Lovell, Christopher C. and Seeyave, Louise T. C. and Vijayan, Aswin P. and Wilkins, Stephen M.},
